<%= form_for(@log) do |f| %>
  <%= hidden_field_tag :post_id, @post.id %>
  <div class="row">
    <div class="col-md-8 col-md-offset-1">
      <div class="field">
        <%= f.text_area :content, placeholder: "カフェメモ" %>
      </div>
    </div>
    <div class="col-md-3">
      <%= f.submit "ログ追加", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
