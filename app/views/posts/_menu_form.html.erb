<%= f.fields_for :menus do |i| %>
  <div class="row">
    <div class="col-md-9">
      <div class = 'form-group'>
        <%= i.text_field :name, class: 'form-control menu_name' %>
      </div>
    </div>
    <div class="col-md-3">
      <div class = 'form-group'>
        <%= i.text_field :price, class: 'form-control menu_price' %>
      </div>
    </div>
  </div>
<% end %>
